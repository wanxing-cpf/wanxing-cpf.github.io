<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>管理员面板</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card { box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075); }
    .table-responsive { max-height: 70vh; overflow-y: auto; }
    .navbar { box-shadow: 0 2px 4px rgba(0,0,0,.1); }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="#">文件管理系统 - 管理员面板</a>
      <div class="navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">用户面板</a>
          </li>
          <li class="nav-item">
            <span class="navbar-text me-3">管理员: <%= user.username %></span>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-light btn-sm" href="/logout">退出</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- 新增按钮跳转到用户管理 -->
  <div class="container d-flex justify-content-end mb-3">
    <a class="btn btn-outline-primary" href="/admin/users">用户管理</a>
  </div>

  <div class="container">
    <h1 class="mb-4">所有用户文件</h1>

    <!-- ✅ 显示管理员配额提示 -->
    <% if (user.is_admin) { %>
      <div class="alert alert-success my-3">
        当前管理员无限配额，仅受系统总容量（20GB）限制。
      </div>
    <% } %>

    <div class="card">
      <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
        <span>系统文件管理</span>
        <small><%= files.length %> 个文件</small>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-striped table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th>文件名</th>
                <th>用户</th>
                <th>大小</th>
                <th>上传时间</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% files.forEach(file => { %>
                <tr data-id="<%= file.id %>">
                  <td ondblclick="location.href='/download/<%= encodeURIComponent(file.name) %>'" 
                      style="cursor: pointer;">
                    <%= file.name %>
                  </td>
                  <td><%= file.username %></td>
                  <td><%= formatFileSize(file.size) %></td>
                  <td><%= new Date(file.upload_time).toLocaleString() %></td>
                  <td>
                    <a href="/download/<%= encodeURIComponent(file.name) %>" 
                       class="btn btn-sm btn-primary">下载</a>
                    <button class="btn btn-sm btn-danger admin-delete-btn">删除</button>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="card-footer bg-light text-muted">
        <small>双击文件名可以快速下载</small>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // 管理员删除文件
    document.addEventListener('click', async (e) => {
      if (e.target.classList.contains('admin-delete-btn')) {
        if (!confirm('确定要删除此文件吗？此操作不可恢复。')) return;
        
        const row = e.target.closest('tr');
        const id = row.dataset.id;
        
        try {
          e.target.disabled = true;
          e.target.innerHTML = '<span class="spinner-border spinner-border-sm" role="status"></span>';
          
          const res = await fetch(`/delete/${id}`, { method: 'POST' });
          if (res.ok) {
            row.remove();
            const count = document.querySelectorAll('tbody tr').length;
            document.querySelector('.card-header small').textContent = `${count} 个文件`;
          } else {
            throw new Error('删除失败');
          }
        } catch (err) {
          alert(err.message);
          e.target.disabled = false;
          e.target.textContent = '删除';
        }
      }
    });
  </script>
</body>
</html>
